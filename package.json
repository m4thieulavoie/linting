{
  "name": "@m4thieulavoie/linting",
  "version": "0.2.7",
  "description": "My opiniated set of linting rules",
  "main": ".eslintrc.js",
  "scripts": {
    "lint": "eslint --ext .ts, ./ && npx stylelint \"src/**/*.scss\"",
    "publish:patch": "npm version patch && npm publish && git push",
    "publish:minor": "npm version minor && npm publish && git push",
    "publish:major": "npm version major && npm publish && git push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m4thieulavoie/linting.git"
  },
  "keywords": [
    "eslint",
    "stylelint",
    "lint",
    "linting"
  ],
  "author": "Mathieu Lavoie",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/m4thieulavoie/linting/issues"
  },
  "homepage": "https://github.com/m4thieulavoie/linting#readme",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-functional": "4.0.2",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-inclusive-language": "2.2.0",
    "postcss": "8.4.5",
    "postcss-scss": "4.0.2",
    "stylelint": "14.1.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "24.0.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.0.1"
  },
  "devDependencies": {
    "typescript": "4.5.4"
  },
  "peerDependencies": {
    "typescript": "^4.4.0"
  }
}
