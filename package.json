{
  "name": "@m4thieulavoie/linting",
  "version": "1.0.0",
  "description": "My opiniated set of linting rules",
  "main": ".eslintrc.js",
  "scripts": {
    "lint": "eslint --ext .ts, ./ && npx stylelint \"src/**/*.scss\"",
    "publish:patch": "npm version patch && npm publish && git push",
    "publish:minor": "npm version minor && npm publish && git push",
    "publish:major": "npm version major && npm publish && git push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m4thieulavoie/linting.git"
  },
  "keywords": [
    "eslint",
    "stylelint",
    "lint",
    "linting"
  ],
  "author": "Mathieu Lavoie",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/m4thieulavoie/linting/issues"
  },
  "homepage": "https://github.com/m4thieulavoie/linting#readme",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "7.14.1",
    "@typescript-eslint/parser": "7.14.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-functional": "6.6.3",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-inclusive-language": "2.2.1",
    "postcss": "8.4.38",
    "postcss-scss": "4.0.9",
    "stylelint": "16.6.1",
    "stylelint-config-standard": "36.0.1",
    "stylelint-order": "6.0.4",
    "stylelint-scss": "6.3.2"
  },
  "devDependencies": {
    "typescript": "5.5.2"
  },
  "peerDependencies": {
    "typescript": "^5.5.0"
  }
}
